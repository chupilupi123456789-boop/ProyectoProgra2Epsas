<Window x:Class="WpfAppPrimerLoginP2D.LoginEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingreso de Empleado" Height="450" Width="650">

    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="Imagenes/epsas.jpg" Opacity="0.85"/>
        </Grid.Background>

        <!-- Título -->
        <Label Content="INGRESO DE EMPLEADO"
               FontSize="32"
               HorizontalAlignment="Center"
               FontWeight="Bold"
               Foreground="#F0F8FF"
               VerticalAlignment="Top"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="CI:" Width="115" Foreground="#F0F8FF"/>
                <TextBox x:Name="txtCI" Width="200" Height="35"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.093"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <Label Content="Contraseña:" Width="125" Foreground="#F0F8FF"/>
                <PasswordBox x:Name="txtContrasena" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <!-- Botón Ingresar con azul corporativo -->

                <!-- Botón Registrar con azul celeste corporativo -->

                <Button Content="Ingresar" Width="192" Height="40" 
                        Click="btnIngresar_Click"
                        Background="#1E90FF"
                        Foreground="White"
                        FontWeight="Bold"
                        Opacity="0.9"/>

                <Button Content="Registrar" Width="221" Height="40" Margin="10,0,0,0" 
                        Click="btnRegistrar_Click"
                        Background="#003399" Foreground="White"
                        FontWeight="Bold"
                        Opacity="0.9"/>
            </StackPanel>
        </StackPanel>

        <!-- Resultado de validación -->
        <TextBlock x:Name="txtResultado" 
                   VerticalAlignment="Bottom" 
                   Height="30" 
                   TextAlignment="Center"
                   Foreground="#F0F8FF"
                   FontWeight="Bold"/>
    </Grid>
</Window>
