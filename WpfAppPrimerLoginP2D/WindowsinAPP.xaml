<Window x:Class="WpfAppPrimerLoginP2D.WindowsinAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Empleado" Height="1300" Width="850">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">

            <Grid.Background>
                <ImageBrush ImageSource="Imagenes/epsas.jpg" Opacity="0.89"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <Label Content="REGISTRO COMPLETO DE EMPLEADO"
                   FontSize="35" FontWeight="Bold"
                   Foreground="#F0F8FF"
                   HorizontalAlignment="Center" Grid.Row="0"/>

            <!-- DATOS PERSONALES -->
            <StackPanel Grid.Row="1" Margin="10">

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="CI:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtCI" Width="354"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Contraseña:" Width="200" Foreground="#F0F8FF"/>
                    <PasswordBox x:Name="txtContrasenaRegistro" Width="363"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Nombre:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtNombre" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Apellido Paterno:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtApPaterno" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Apellido Materno:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtApMaterno" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Correo:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtEmail" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Teléfono:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtTelefono" Width="350"/>
                </StackPanel>
            </StackPanel>

            <!-- INFORMACIÓN LABORAL -->
            <StackPanel Grid.Row="2" Margin="10">

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Cargo:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtCargo" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Departamento:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtDepartamento" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Tipo de Contrato:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtTipoContrato" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Fecha de Ingreso:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtFechaIngreso" Width="350"/>
                </StackPanel>
            </StackPanel>

            <!-- HISTORIAL PROFESIONAL -->
            <StackPanel Grid.Row="3" Margin="10">

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Nivel Académico:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtNivelAcademico" Width="350"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <Label Content="Experiencia Laboral:" Width="200" Foreground="#F0F8FF"/>
                    <TextBox x:Name="txtExperiencia" Width="350" Height="80"
                             TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>
            </StackPanel>

            <!-- BOTONES -->
            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Center">

                <Button x:Name="btnLimpiar" Content="Limpiar"
                        Width="120" Height="50" Margin="10"
                        Background="#1E90FF" Foreground="White"
                        FontWeight="Bold"
                        Click="btnLimpiar_Click"/>

                <Button x:Name="btnRegistrar" Content="Registrar"
                        Width="120" Height="50" Margin="10"
                        Background="#003399" Foreground="White"
                        FontWeight="Bold"
                        Click="btnRegistrar_Click"/>

                <Button x:Name="btnVolver" Content="Volver"
                        Width="160" Height="50" Margin="10"
                        Background="#A9A9A9" Foreground="White"
                        FontWeight="Bold"
                        Click="btnVolver_Click"/>
            </StackPanel>

            <!-- RESULTADO -->
            <TextBlock x:Name="txtResultado"
                       Grid.Row="5" Margin="20"
                       FontSize="16" Background="#B3B3B3"
                       Foreground="#F0F8FF"
                       Opacity="0.7" TextWrapping="Wrap"/>
        </Grid>
    </ScrollViewer>
</Window>
